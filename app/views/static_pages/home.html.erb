<% if user_signed_in? %>
	<div class="row">
  	<aside class="span4">
  		<section>
    		<%= render 'shared/user_info' %>
        <%= link_to "Create a List!", new_grocery_list_path %>
  		</section>
  	</aside>
	</div>
  <div class="span12">
    <h3>My Lists</h3>
    <%= render 'shared/grocery_lists' %>
  </div>
<% else %>
  <div class="center hero-unit">
  
 		<h1>Welcome to Groceryator</h1>

     <%= link_to "Sign up now!", new_user_registration_path,
                              class: "btn btn-large btn-primary" %>
    </div>
<% end %>
